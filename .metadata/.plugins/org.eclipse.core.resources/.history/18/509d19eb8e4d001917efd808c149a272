import java.util.Scanner;
public class InClassLoopMethod2 {
//	static double assignmentAverage;
	
	public static void getUserFeedback() {
		Scanner gradeType = new Scanner(System.in);
		System.out.println("What is being graded");
		String input = gradeType.next();
		int result = Integer.parseInt(input);
		
		if(result == 1) {
//			assignment
			for(int a = 0; a < 5; a++) {
				System.out.println("assignment");
			}
		} else if (result == 2 ) {
//			quizz
			for(int a = 0; a < 6; a++) {
				System.out.println("quizz");
			}
			
		} else if (result == 3) {
//			exam
			for(int a = 0; a < 3; a++) {
				System.out.println("exam");
			}
			
		} else if (result == 4) {
//			project
			for(int a = 0; a < 2; a++) {
				System.out.println("project");
			}
			
		} else {
			System.out.println("Invalid input");
		}
	}
	
	public static double calcAverage(double assignmentAverage) {
		
		
		return calcAverage(assignmentAverage);
	}

	public static void main(String[] args) {
//		double finalGrade = (.20 * assignmentAverage) + (.20 * quizAverage) + (.50 * examAverage) + (.10 * projectAverage);
//		System.out.println("Your final grade is: " + finalGrade);
		calcAverage(0);
	}
	

}
